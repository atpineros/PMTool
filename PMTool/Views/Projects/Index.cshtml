
@model PMTool.Models.ViewModels.ProjectViewViewModel
@{
    ViewData["Title"] = "Project";
}


<partial name="~/Views/Projects/_ProjectNav.cshtml" />



<div class="row">
    <form asp-controller="Projects" asp-action="Index" method="post">
        @if (Model.Projects != null)
        {
            @Html.LabelFor(m => m.Projects, "Projects:")
            @Html.DropDownListFor(m => m.SelectedProjectID, Model.Projects, "--Select Projects--")
            @Html.ValidationMessageFor(model => model.Projects, "", new { @class = "text-danger" })
        }
        <input type="submit" name="name" value="Submit" />
    </form>
</div>
<div class="projectInfo">
    <div class="projectInfoTxt row">
        PROJECT INFORMATION
    </div>
    <div class="row">
        <div class="col-2">
            Title:
        </div>
        <div class="col-3">
            @if (Model.Project != null)
            {
                @Model.Project.PrjName;
            }
        </div>
        <div class="col-2">
            Project Manager:
        </div>
        <div class="col-3">
            @if (Model.Project != null)
            {
                @Model.Project.PrjMgr;
            }
        </div>
    </div>
    <div class="row">
        Description:
    </div>
    <div class="row">
        <div class="descriptionTxt">
            @if (Model.Project != null)
            {
                @Model.Project.Description;
            }
        </div>
    </div>
    <div class="row">
        <div class="projectDueDateTxt col-2">
            Project Due Date:
        </div>
        <div class="col-3">
            @if (Model.Project != null)
            {
                @Model.Project.PrjDueDate;
            }
        </div>
        <div class="estimatedEffortTxt col-2">
            Estimated Effort (hr):
        </div>
        <div class="col-3">
            @if (Model.Project != null)
            {
                @Model.Project.PrjEstEffort;
            }
        </div>
    </div>
    <div class="row projectTeamTxt">
        PROJECT TEAM
    </div>

    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Roles != null && Model.Users != null)
                {
                    @for (var i = 0; i < Model.Users.Count; i++)
                    {
                        <tr>
                            <td>@Model.Users[i].Fname @Model.Users[i].Lname</td>
                            <td>@Model.Roles[i].RoleName</td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="row projectRiskTxt">
        PROJECT RISKS
    </div>
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Priority</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Risks != null)
                {
                    @foreach (var item in Model.Risks)
                    {
                        <tr>
                            <td>Missing Title</td>
                            <td>@item.RiskDescription</td>
                            <td>Missing Priority</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/Projects.js"></script>
}