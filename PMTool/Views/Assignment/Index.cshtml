@model PMTool.Models.ViewModels.spAssignTasks
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Assignment";
}


<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active">View</a>
    </li>
</ul>

<pre>
    </pre>

<div class="row">
    <form asp-controller="Assignment" asp-action="Index" method="post">
        @if (Model.Projects != null)
        {
            @Html.LabelFor(m => m.Projects, "Projects:")
            @Html.DropDownListFor(m => m.SelectedProjectID, Model.Projects, "--Select Projects--")
            @Html.ValidationMessageFor(model => model.Projects, "", new { @class = "text-danger" })
        }
        <input type="submit" name="name" value="Submit" />
    </form>
</div>

<div class="activeProjectTxt">
    <h5>ACTIVE REPORTS</h5>
</div>

<style type="text/css">
    @@media only screen and (min-width: 900px) {
        table, th, td {
            border: 1px solid black;
            text-align: center;
        }

        th {
            height: 50px;
            background-color: darkgray;
            color: white;
            font-size: 16px;
            white-space: nowrap;
        }

        tr {
            height: 30px;
        }

            tr:nth-child(even) {
                background-color: #f2f4f5;
            }

        td {
            font-size: 12px;
            white-space: nowrap;
        }
    }
</style>
<div class="row">
    <div class="col-md-12">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Assignee</th>
                    <th>Effort Hours</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Assignments != null)
                {
                    @foreach (var item in Model.Assignments)
                    {

                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Assignee</td>
                            <td>@item.Effort</td>
                        </tr>

                    }
                }
                </tbody>
        </table>
    </div>
</div>